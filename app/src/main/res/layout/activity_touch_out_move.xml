<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.yangl.androidsample.touchEvent.outsideInterceptMove.InterceptViewGroup
        android:id="@+id/view_group"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:background="@color/mDarkBlackColor"
        tools:context=".activity.TouchEventActivity">

        <com.example.yangl.androidsample.touchEvent.outsideInterceptMove.InterceptView
            android:id="@+id/view"
            style="@style/NormalText"
            android:background="@color/mGreenColor"
            android:padding="20dp"
            android:layout_width="200dp"
            android:layout_height="200dp" />

    </com.example.yangl.androidsample.touchEvent.outsideInterceptMove.InterceptViewGroup>
</LinearLayout>
