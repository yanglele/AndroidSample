<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".touchEvent.simple.SimpleTouchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/m70GreenColor"
            android:text="text" />

        <com.example.yangl.androidsample.touchEvent.simple.SimpleTextView
            android:id="@+id/simple_test"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/m30DarkBlackColor"
            android:text="simple_test"
            app:layout_constraintTop_toBottomOf="@+id/text_view" />

    </LinearLayout>

</ScrollView>