<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/tv_chose_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择图片"/>


    <ImageView
        android:id="@+id/iv_show_pic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.yangl.androidsample.imageCorp.matrix.TShapeView
            android:layout_width="200dp"
            android:layout_height="200dp"/>

        <com.example.yangl.androidsample.imageCorp.matrix.TDownShapeView
            android:layout_width="200dp"
            android:layout_height="200dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.yangl.androidsample.imageCorp.matrix.NormalShapeView
            android:layout_width="200dp"
            android:layout_height="200dp"/>


        <com.example.yangl.androidsample.imageCorp.shaper.MultiView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/image5"
            app:angleCount="10"
            app:type="multi"/>
    </LinearLayout>

</LinearLayout>