<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/show_view"
        android:textSize="30dp"
        android:text="待接收内容"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/show_view_2"
        android:textSize="30dp"
        android:text="父类待接收内容"
        app:layout_constraintTop_toBottomOf="@+id/show_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/show_view_3"
        android:textSize="30dp"
        android:text="接口待接收内容"
        app:layout_constraintTop_toBottomOf="@+id/show_view_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/button"
        android:text="跳转"
        app:layout_constraintTop_toBottomOf="@+id/show_view_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"/>

    <Button
        android:id="@+id/send_lot"
        android:text="send_lot"
        app:layout_constraintTop_toBottomOf="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onSendClick"/>

    <TextView
        android:id="@+id/show_view_4"
        android:textSize="30dp"
        android:text="a lot 接收内容"
        app:layout_constraintTop_toBottomOf="@+id/send_lot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</android.support.constraint.ConstraintLayout>